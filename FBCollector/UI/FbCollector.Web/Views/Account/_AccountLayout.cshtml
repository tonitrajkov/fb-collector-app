<!DOCTYPE html>

<html>
<head>
    @{
        //Ova mora vaka oti IE ne pocituva base tag ako ne e kompleten sose http i slicno
        var baseHref = Request.Url.Scheme + Uri.SchemeDelimiter + Request.Url.Host + ":" + Request.Url.Port + Url.Content("~");

    }
    <script>
        if (!window.location.origin) {
            window.location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
        }

        var baseUrl = '@baseHref';
    </script>

    <title>Facebook Data Collector</title>
    <base href="@baseHref" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Angular Material style sheet -->
    <link href="@string.Format("{0}", Url.Content("~/Content/angular-material/angular-material.min.css"))" rel="stylesheet" type="text/css" />
    <link href="@string.Format("{0}", Url.Content("~/Content/angular-material/angular-material-icons.css"))" rel="stylesheet" type="text/css" />
    <link href="@string.Format("{0}", Url.Content("~/Content/app.css"))" rel="stylesheet" type="text/css" />
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic">*@

    <style type="text/css">
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
</head>
<body ng-app="accountApp" ng-cloak ng-controller="accountController">

    <div layout="column" layout-align="center center" layout-fill="layout-fill">
        <div layout="column" class="loginBox md-whiteframe-z1">
            <md-toolbar>
                <div class="md-toolbar-tools">
                    <img src="/Content/img/logo-short.png" width="55" height="45" />
                    <h2 class="md-display-1" style="padding-left:10px">
                        <span class="white-color">{{loginHeaderTxt}}</span>
                    </h2>
                    <span flex></span>

                    <md-menu md-position-mode="target-right target">
                        <button class="language-button md-button md-default-theme md-ink-ripple" type="button" ng-click="$mdOpenMenu()">
                            <div layout="row" layout-align="center center" class="layout-align-center-center layout-row">
                                <img class="flag"
                                     ng-src="{{currentLanguage.DisplayName == 'MK' ? '/Content/img/flags/mk.png':(currentLanguage.DisplayName == 'EN' ? '/Content/img/flags/en.png' : '/Content/img/flags/sq.png')}}">
                                <span class="iso white-color">{{currentLanguage.DisplayName}}</span>
                                <ng-md-icon icon="arrow_drop_down" style="fill: white" size="20"></ng-md-icon>
                            </div>
                            <div class="md-ripple-container"></div>
                        </button>
                        <md-menu-content width="1">
                            <md-menu-item ng-repeat="language in languages">
                                <button ng-click="changeLanguage(language)"
                                        class="md-button ng-scope md-default-theme md-ink-ripple"
                                        type="button"
                                        role="menuitem">
                                    <span layout="row" layout-align="start center" class="layout-align-start-center layout-row">
                                        <img class="flag"
                                             ng-src="{{language.DisplayName == 'MK' ? '/Content/img/flags/mk.png':(language.DisplayName == 'EN' ? '/Content/img/flags/en.png' : '/Content/img/flags/sq.png')}}">
                                        <span>{{language.DisplayName == 'MK' ? 'Macedonian':(language.DisplayName == 'EN' ? 'English' : 'Albanian')}}</span>
                                    </span>
                                    <div class="md-ripple-container"></div>
                                </button>
                            </md-menu-item>
                        </md-menu-content>
                    </md-menu>
                </div>
            </md-toolbar>
            <md-content layout="column" class="md-padding">
                @RenderBody()
            </md-content>
        </div>
    </div>

    <script src="@string.Format("{0}", Url.Content("~/Scripts/jquery-2.1.4.min.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/Scripts/angularjs/angular.min.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/Scripts/angularjs/angular-animate.min.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/Scripts/angularjs/angular-aria.min.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/Scripts/angularjs/angular-messages.min.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/Scripts/angular-material/angular-material.min.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/Scripts/angular-material/angular-material-icons.min.js"))"></script>

    <script src="@string.Format("{0}", Url.Content("~/app/app/utils.js"))"></script>
    <script src="@string.Format("{0}", Url.Content("~/app/app/accountApp.js"))"></script>


</body>
</html>