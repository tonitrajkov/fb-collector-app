
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}
<script>
    var errorMsg = '@ViewBag.Name';
</script>

@using (Html.BeginForm("Login", "Account", null,
                       FormMethod.Post, new { @class = "layout-column" }))
{
    <div style="padding-bottom: 55px; text-align: center">
        <ng-md-icon icon="account_circle" style="fill: #868686; margin-right: 55px" size="80"></ng-md-icon>
    </div>
    <form role="form">
        <md-input-container>
            <label>{{userNameLabelTxt}}</label>
            @Html.TextBox("test")
        </md-input-container>
        <md-input-container>
            <label>{{passwordLabelTxt}}</label>
            @Html.Password("pas")
        </md-input-container>
        <md-input-container style="margin-top: 20px !important">
            <md-button type="submit" class="md-raised md-primary" style="margin: 0; width: 100%; color: #fff">
                {{loginBtnTxt}}
            </md-button>
        </md-input-container>
        <md-input-container style="margin-top: 20px !important">
            <div class="float-right">
                @Html.ActionLink("{{forgotPassLinkTxt}}", "ForgotPassword", "Account", null, new { @class = "forgot-pass-link" })
            </div>
        </md-input-container>
    </form>
}